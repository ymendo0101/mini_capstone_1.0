<% @products.each do |product| %>
  <h2>id: <%= product.id %></h2>
    <h4>Name: <%= product.name %></h4>
    <p>Price: <%= product.price %></p>
    <p>Description: <%= product.description %></p>
    <p>Image_url: <%= product.image_url%></p>
    <a href="/products/<%= product.id %>">More info</a>
  <% end %> 
